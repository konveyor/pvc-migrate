apiVersion: v1
kind: Service
metadata:
  labels:
    app: {{ pod_name }}
    purpose: rsync
    owner: pvc-migrate
  name: {{ svc_name }}
  namespace: {{ pvc_namespace }}
spec:
  ports:
  - name: ssh
    port: 2222
    protocol: TCP
    targetPort: 2222
  selector:
    app: {{ pod_name }}
    purpose: rsync
    owner: pvc-migrate
  type: ClusterIP
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: {{ svc_name }}
  namespace: {{ pvc_namespace }}
  labels:
    app: {{ pod_name }}
    purpose: rsync
    owner: pvc-migrate
spec:
  to:
    kind: Service
    name: ssh
  port:
    targetPort: 2222
  tls:
    termination: passthrough